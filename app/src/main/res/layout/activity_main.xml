<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#670e070e">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="486dp"
        android:id="@+id/imageView"
        android:src="@drawable/menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="181dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:id="@+id/button"
        android:layout_marginBottom="123dp"
        android:layout_marginTop="29dp"
        android:background="#ff3de031"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="com.example.faith.selfassesment.HowItWorks1"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button2"
        android:background="#ff1832ff"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:onClick="com.example.faith.selfassesment.Log_in"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Latest Recipes"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#ff1832ff"
        android:onClick="com.example.faith.selfassesment.HowItWorks2"/>

</RelativeLayout>